@model PizzeriaWeb3._1.Models.Pedidos
<link rel="stylesheet" href="~/css/stylesList.css" />
<h2>Confirmar Eliminación</h2>

<h3>¿Estás seguro de que deseas eliminar este pedido?</h3>
<div>
    <h4>Pedido Número: @Model.IdPedidos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mesa
        </dt>
        <dd class="col-sm-10">
            @Model.Mesa.NombreMesas
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Model.Total
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.IdPedidos" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
