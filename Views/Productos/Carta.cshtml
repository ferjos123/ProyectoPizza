@model IEnumerable<PizzeriaWeb3._1.Models.Productos>

@{
    ViewData["Title"] = "Carta";
}

<h1>¡Nuestra Carta!</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockProducto)
            </th>
            @* <th>
            @Html.DisplayNameFor(model => model.Usuario)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockProducto)
                </td>
                @* <td>
            @Html.DisplayFor(modelItem => item.Usuario.NombreUsuario)
            </td> *@
                <td>
                    <a asp-action="DetalleCarta" asp-route-id="@item.IdProducto">Detalles:</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Camareros" asp-controller="Home" class="btn btn-primary">Volver</a>
</div>
